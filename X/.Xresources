! ------------------------------------------------------------
! XFT
! ------------------------------------------------------------

Xft.dpi       : 96
Xft.antialias : true
Xft.hinting   : true
Xft.rgba      : rgb
Xft.autohint  : false
Xft.hintstyle : hintfull
Xft.lcdfilter : lcddefault

! ------------------------------------------------------------
! Colors
! ------------------------------------------------------------

#include ".config/xcolors/uael"

! ------------------------------------------------------------
! URxvt
! ------------------------------------------------------------

URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
URxvt.perl-ext-common: font-size
URxvt.keysym.C-plus:     font-size:increase
URxvt.keysym.C-minus:   font-size:decrease
URxvt.keysym.C-equal: font-size:reset

URxvt.colorBD: #B5BD68
URxvt.colorIT: #B294BB
URxvt.colorUL: #81A2BE

URxvt.letterSpace: -1
URxvt.font: xft:Inconsolata\-dz:style=dz:size=10,xft:Inconsolata for Powerline:size=10

! ------------------------------------------------------------
! XTerm
! ------------------------------------------------------------

let g:Powerline_symbols = 'fancy'

xterm*termName        : screen-256color
xterm*renderFont      : true
xterm*faceName        : Inconsolata for Powerline
xterm*faceSize        : 11
xterm*locale          : true
xterm*metaSendsEscape : true
xterm*eightBitInput   : false
xterm*eightBitControl : false
xterm*eightBitOutput  : true
xterm*loginShell      : true
xterm*scrollBar       : false
xterm*saveLines       : 4096
xterm*utf8            : 2
xterm*jumpScroll      : true
xterm*multiScroll     : true
xterm*trimSelection   : true

xterm*cursorUnderline : true
xterm*cursorBlink     : false
xterm*dynamicColors   : true
xterm*boldMode        : true
xterm*colorBDMode     : false

xterm*colorBD: #B5BD68
xterm*colorIT: #B294BB
xterm*colorUL: #80A2BE

xterm*VT100.Translations: #override \
	Ctrl Alt <Key>V: insert-selection(CLIPBOARD) \n\
	Ctrl Alt <Key>C: copy-selection(CLIPBOARD) \n\

xterm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48
