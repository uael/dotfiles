{
    "explorer.confirmDelete": false,
    "editor.fontFamily": "'FuraCode Nerd Font'",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.minimap.enabled": false,
    "window.menuBarVisibility": "toggle",
    "workbench.statusBar.visible": false,
    "files.autoSave": "onFocusChange",
    "workbench.iconTheme": "material-icon-theme",
    "materialTheme.accent": "Orange",
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.saturation": 0,
    "editor.fontLigatures": true,
    "workbench.commandPalette.preserveInput": true,
    "workbench.list.multiSelectModifier": "alt",
    "workbench.sideBar.location": "left",
    "workbench.colorTheme": "Material Theme Darker",
    "bracket-pair-colorizer-2.colors": [
        "#a38667",
        "#a8772e",
        "#e6be85",
    ],

    "ccls.codeLens.enabled": false,
    "ccls.completion.detailedLabel": true,
    "ccls.completion.enableSnippetInsertion": true,

    "ccls.highlight.function.face": [
        "enabled"
    ],
    "ccls.highlight.variable.face": [
        "enabled"
    ],
    "ccls.highlight.type.face": [
        "enabled"
    ],
    "ccls.highlight.enum.face": [
        "fontWeight: bolder",
        "variable",
        "member"
    ],
    "ccls.highlight.macro.face": [
        "variable",
        "fontWeight: bolder"
    ],
    "ccls.highlight.global.face": [
        "fontWeight: bolder"
    ],
    "ccls.highlight.member.face": [
    ],
    "ccls.highlight.static.face": [
        "fontWeight: bold"
    ],
    "ccls.highlight.parameter.face": [
        "variable"
    ],
    "ccls.highlight.namespace.face": [
        "type"
    ],
    "ccls.highlight.typeAlias.face": [
        "type"
    ],
    "ccls.highlight.memberFunction.face": [
        "function",
        "member"
    ],
    "ccls.highlight.globalVariable.face": [
        "variable",
        "global"
    ],
    "ccls.highlight.memberVariable.face": [
        "variable",
        "member"
    ],
    "ccls.highlight.staticVariable.face": [
        "variable",
        "static"
    ],
    "ccls.highlight.staticMemberVariable.face": [
        "variable",
        "static"
    ],
    "ccls.highlight.staticMemberFunction.face": [
        "function",
        "static"
    ],

    "ccls.highlight.type.colors": ["#eac094"],
    "ccls.highlight.macro.colors": ["#B04A4F"],
    "ccls.highlight.function.colors": ["#91444B"],
    "ccls.highlight.variable.colors": ["#a38667"],

    "editor.rulers": [80],
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#424242"
    },
    "trailing-spaces.trimOnSave": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.views.repositories.location": "explorer",
    "gitlens.views.fileHistory.location": "explorer",
    "gitlens.views.lineHistory.location": "explorer",
    "gitlens.views.search.location": "explorer",
    "gitlens.views.compare.location": "explorer",
    "workbench.activityBar.visible": false,
    "extensions.ignoreRecommendations": true,
    "window.zoomLevel": 0,
    "explorer.confirmDragAndDrop": false,
    "git.autofetch": false,
    "git.suggestSmartCommit": false,
    "ccls.index.onChange": true,
    "editor.fontSize": 13,
    "breadcrumbs.enabled": false,
    "workbench.editor.showTabs": true,
    "scm.diffDecorationsGutterWidth": 1,
    "gitlens.blame.avatars": false,
    "gitlens.blame.heatmap.enabled": false,

    "scm.diffDecorations": "gutter",

    "editorOverviewRuler.addedForeground": "#0000",
    "editorOverviewRuler.modifiedForeground": "#0000",
    "editorOverviewRuler.deletedForeground": "#0000",
    "editor.overviewRulerBorder": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "errorLens.gutterIconSet": "circle",
    "bracket-pair-colorizer-2.rulerPosition": "Left",
    "color-highlight.markRuler": false,
}